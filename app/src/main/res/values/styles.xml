<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- need to remove the ugly accent color -->
        <item name="colorAccent">@color/astroViolet</item>

        <!-- custom back icon -->
<!--        <item name="actionModeCloseDrawable">@mipmap/ic_launcher</item> -->
<!--        <item name="actionModeCloseButtonStyle">@style/ActionModeCloseStyle</item> -->
    </style>

    <style name="ActionModeCloseStyle" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@color/colorPrimary</item> <!-- whatever color -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/astroBlack50</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AstroCustomStyle" parent="Theme.AppCompat.NoActionBar">
        <!-- color of text and icons in the toolbar and overflow menu-->
        <item name="android:textColorPrimary">@color/astroViolet</item>
        <!-- color of overflow icon in the main toolbar -->
        <item name="android:textColorSecondary">@color/astroViolet</item>
        <item name="actionModeBackground">@color/astroBlack50</item>
    </style>
</resources>